#!/bin/bash

set -e

chown -R scs:scs /scs-mnt/data

PARSED=`echo "$SCS_REQUIRE_TRANSPORT_TCP" | sed 's/;/","/' | sed -r 's/(.+)/"\1"/'`
sed -ri "s/^(discovery.zen.ping.unicast.hosts:) (.*)\$/\1 [$PARSED]/" /scs/etc/elasticsearch/elasticsearch.yaml

exec /usr/local/bin/supervisord -c /scs/etc/supervisor.conf
